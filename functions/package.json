{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "lint": "eslint .",
    "serve": "firebase serve --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy-functions": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "client": "npm run serve --prefix client",
    "dev": "concurrently \"npm run serve\" \"npm run client\"",
    "deploy-hosting": "npm run build --prefix client && firebase deploy --only hosting"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "concurrently": "^4.1.1",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "event-stream": "^3.3.5",
    "express": "^4.17.1",
    "firebase-admin": "^9.5.0",
    "firebase-functions": "^3.13.2",
    "firebase-tools": "^9.5.0",
    "morgan": "^1.9.1",
    "nodemon": "^1.19.1",
    "query-string": "^6.8.1",
    "querystring": "^0.2.0",
    "spotify-web-api-node": "^4.0.0"
  },
  "devDependencies": {
    "eslint": "^4.12.0",
    "eslint-plugin-promise": "^3.6.0"
  },
  "engines": {
    "node": "10"
  },
  "private": true
}
